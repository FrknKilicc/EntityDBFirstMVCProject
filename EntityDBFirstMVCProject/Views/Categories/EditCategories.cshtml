@model EntityDBFirstMVCProject.Models.Kategoriler
@{
    ViewBag.Title = "EditCategories";
    Layout = "~/Views/Shared/AdminWithoutGraphs.cshtml";
}

@using (Html.BeginForm()) 
{ 
<div class="dl-horizontal">
    @Html.HiddenFor(Model => Model.KategoriID)
    <div class="form-group">
        @Html.Label("Kategori Adı")
        <div class="row-cols-4">
            @Html.EditorFor(x=>x.KategoriAdı, new { htmlAttributes = new {@class="form-control"}})
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Kategori Açıklaması")
        <div class="row-cols-4">
            @Html.EditorFor(x => x.KategoriAciklamasi, new {htmlattributes= new {@class="form-control"}})
        </div>
    </div>
    <input type="submit" name="name" value="Kaydet" class="btn btn-success" />
    @Html.ActionLink("Geri Dön","list","Categories",new {@class="btn btn-info"})
</div>
}
