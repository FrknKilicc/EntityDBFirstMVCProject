@model EntityDBFirstMVCProject.Models.Urunler
@{
    ViewBag.Title = "AddProducts";
    Layout = "~/Views/Shared/AdminWithoutGraphs.cshtml";
}


@using (Html.BeginForm())
{
    <div class="form-horizontal  " >
        <div class="form-group">
            @Html.Label("Ürün Stok Kodu")
            <div class="row-cols-4">
                @Html.EditorFor(Model => Model.ÜrünStokKodu, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Ürün Adı")
            <div class="row-cols-4">
                @Html.EditorFor(Model=>Model.ÜrünAdi,new {@class="form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Ürün Markası")
            <div class="row-cols-4">
                @Html.EditorFor(Model => Model.ÜrünMarkasi, new {@class="form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Stok Giriniz")
            <div class="row-cols-4">
                @Html.EditorFor(Model=>Model.ÜrünAdedi, new {@class="form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Kategori Seçiniz")
            <div class="row-cols-4">
                @Html.DropDownListFor(Model=>Model.KategoriID,(List<SelectListItem >)ViewBag.kategoriData)
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Tedarikçi Seçiniz")
            <div class="row-cols-4">
                @Html.DropDownListFor(Model=>Model.TedarikciID,(List<SelectListItem >)ViewBag.tedarikciData)
            </div>
        </div>
        <br />
        <div>
            <input type="submit"  name="Ekle" value="Kaydet"  class="btn btn-success"/>
            <input type="reset" name="Temizle" value="Temizle" class="btn btn-warning"/>
            @Html.ActionLink("Geri Dön", "List", null, new {@class="btn btn-info"})
        </div>

    </div>
}

