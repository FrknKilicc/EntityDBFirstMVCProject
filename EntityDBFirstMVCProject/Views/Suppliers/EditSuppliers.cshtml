@model EntityDBFirstMVCProject.Models.Tedarikciler
@{
    ViewBag.Title = "Düzenle-Tedarikçiler @MotorMax";
    Layout = "~/Views/Shared/AdminWithoutGraphs.cshtml";
}

<h2>Düzenle</h2>
@using (Html.BeginForm())

{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    @Html.ValidationSummary()
    @Html.HiddenFor(Model => Model.TedarikciID)
    <div class="form-group">
        @Html.Label("Tedarikci ADI", htmlAttributes: new { @class = "control-label cold-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TedarikciAdı, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TedarikciAdı, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="form-group">
        @Html.Label("Tedarikçi Adresi", htmlAttributes: new { @class = "control-label cold-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TedarikciAdresi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TedarikciAdresi, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Tedarikçi Ülke", htmlAttributes: new { @class = "control-label cold-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TedarikciÜlke, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TedarikciÜlke, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Tedarikçi Tel", htmlAttributes: new { @class = "control-label cold-md-2" })
    </div>
    <div class="col-md-10">
        @Html.EditorFor(Model => Model.Telefon, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Telefon, "", new { @class = "text-danger" })
    </div>
    
</div>
<div class="form-group">
    <input type="submit" name="name" value="Kaydet" class="btn btn-success">
</div>
}

