@model EntityDBFirstMVCProject.Models.Müsteriler
@{
    ViewBag.Title = "AddCustomer";
    Layout = "~/Views/Shared/AdminWithoutGraphs.cshtml";
}

<h2>Müşteri Ekle</h2>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">
        @ViewBag.SuccessMessage
    </div>
}


@using (Html.BeginForm())
{


    <div class="form-horizontal">
        @Html.Label("Müsteri Adi")
        <div class="row-cols-4">@Html.EditorFor(x => x.MüsteriAdi, new { @class = "form-control" })</div>
    </div>
    <div class="form-horizontal">
        @Html.Label("Müsteri Sifre")
        <div class="row-cols-4">
            @Html.EditorFor(x => x.MüsteriSifre)
        </div>
    </div>
    <div class="form-horizontal">
        @Html.Label("Müsteri Tel")
        <div class="row-cols-4">
            @Html.EditorFor(x => x.MüsteriTel)
        </div>
    </div>
    <div class="form-horizontal">
        @Html.Label("Müsteri Adres")
        <div class="row-cols-4">
            @Html.EditorFor(x => x.MüsteriAdresi)
        </div>
    </div>
    <div class="form-horizontal">
        @Html.Label("Müsteri Rolü")
        <div class="row-cols-4">
            @Html.EditorFor(x => x.Role)
        </div>
    </div>
    <div class="form-horizontal">
        <br />
        <input type="submit" name="Ekle" value="Kaydet" class="btn btn-success" />
        <input type="reset" name="Temizle" value="Temizle" class="btn btn-warning" />
        @Html.ActionLink("Geri Dön", "List", null, new { @class = "btn btn-info" })
    </div>
}


